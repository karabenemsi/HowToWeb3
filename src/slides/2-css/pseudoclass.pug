      style.
        * {
          box-sizing: border-box;
        }
        body{
          font-family: "Ebrima";
          font-size: 16px;
          background: #eee;
          margin: 0;
          padding: 0;
          min-height: 100vh;
        }
      
        h1 {
          font-size: 2rem;
          text-transform: uppercase;
          font-family: "Bahnschrift";
          font-weight: 400;
        }

        p {
          line-height: 1.5;
          color: #232323;
          text-align: justify;
        }

        ul {
          list-style: none;
        }


        header{
          color: white;
          background:
            url(https://howtoweb3.de/images/medium/003.jpg);
          background-size: cover;
          background-position: center center;
          border-bottom: 0.5rem solid #1e64e2;
          padding: 0 1rem 1rem;
          margin-bottom: 3rem;
          height: 20rem;
          box-shadow: 0 0 1rem rgba(0,0,0,0.8);
          position: relative
        }

        nav {
          position: sticky;
          top: 0;
        }

        nav ul{
          font-size: 1rem;
          list-style: none;
          margin: 0;
          padding: 0;
          text-align: right;
        }

        .centered {
          text-align: center;
        }

        main{
          margin: 2rem auto;
          padding: 0 2rem;
          width: 100%;
          max-width: 40rem;
        }

        th, td {
          border-bottom: 0.125rem solid #232323;
        }

        img {
          width:100%;
          margin: 1rem 0; 
          max-height: 15rem;
          object-fit: cover;
          box-shadow: 0 0 1rem rgba(0,0,0,0.6);
          border-radius: 1rem;
        }

        nav li {
          display:inline-block;
        }
        nav li a{
          display: block;
          padding: 1rem;
          color: #fff;
          text-decoration: none;
        }

        nav a:hover{
          background: #1e64e2;
        }

        .logo{
          position: absolute;
          bottom:0;
        }

        footer {
          background: #333;
          width: 100%;
        }

        .footer-content {
          margin: 0 auto;
          width: 100%;
          max-width: 40rem;
          display: flex;
          justify-content: center;
          align-items: center;
          flex-wrap: wrap;
        }
        .footer-content p{
          margin: 1rem;
          color: #fff;
          line-height: 1;
          text-align: center;
        }

        .footer-content p:nth-of-type(2){
          flex-grow:1;
        }

        .gallery {
          display: flex;
          flex-wrap: wrap;
        }

        .gallery img {
          margin: 1rem;
          width: 15rem;
          flex-grow:1;
        }
