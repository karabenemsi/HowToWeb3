include ../settings.pug
doctype html
html(lang="de")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    link(href="./css/main.css", rel="stylesheet")
    block meta
    meta(name="nextSlide", content=meta.nextSlide)
    meta(name="prevSlide", content=meta.prevSlide)
    meta(name="title", content=meta.title)
    meta(name="subtitle", content=meta.subtitle)
    title=meta.title
  body(class="slide-"+meta.slideId)

    header
      block heading
        h1 SlideHeading


    main
      block main


    footer
      .date=meta.date.toLocaleDateString('de-DE')
      .author=meta.author
      .build=new Date().getMonth()

    //- Script
    script(src="./js/vendor.min.js")
    script(src="./js/main.min.js")
    block script